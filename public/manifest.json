{
  "manifest_version": 3,
  "name": "BlockSiteZen",
  "description": "üßòüèª‚Äç‚ôÇÔ∏è BlockSiteZen : block and regain your freedom !",
  "version": "1.0.0",
  "icons": {
    "128": "icon-128x128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "hack-content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "/assets/*",
        "content.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}